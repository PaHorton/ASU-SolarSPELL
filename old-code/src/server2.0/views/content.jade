extend layout

block content
  script.
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function($scope, $http) {
      $http.get("http://localhost:3000/content/files/#{title}").then(function(response) {
        $scope.content = response.data;
      });
    });
  h1= title
  p Resources on #{title}
  div(ng-app="myApp" ng-controller="myCtrl")
    ul
      li(ng-repeat="x in content")
        a(ng-href="/files/{{x.Filename}}")
          |{{x.Title}}
