extends layout
block content
  script.
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function($scope, $http) {
      $http.get("http://localhost:3000/content").then(function(response) {
        $scope.content = response.data;
      });
    });
  h1= title
  p
    |Welcome to #{title}
  div(ng-app="myApp" ng-controller="myCtrl")
    ul
      li(ng-repeat="x in content | orderBy")
        a(ng-href="/content/{{x}}")
          |{{x}}
